
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all access to collections not explicitly defined.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public, read-only access to the threats collection for the feed.
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Only server-side can write
    }

    // Allow users to read and write only their own reputation document.
    match /reputations/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent users from deleting their reputation
    }
  }
}
