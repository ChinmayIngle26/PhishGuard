
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public, read-only access to the threats feed
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Only the server should write threats
    }

    // Secure user reputations
    // A user can only read or write their own reputation document
    match /reputations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
