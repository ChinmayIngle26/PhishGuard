
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Threats are public and read-only for all users.
    // Only backend services (with admin access) should write to this collection.
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false;
    }

    // User reputation data is private.
    // Users can only read or write their own reputation document.
    match /reputations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default for security.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
