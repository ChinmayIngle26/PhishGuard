
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public, read-only access to the 'threats' collection for the feed.
    match /threats/{threatId} {
      allow get, list: if true;
      allow write: if false;
    }

    // Secure the 'reputations' collection.
    match /reputations/{userId} {
      // A user can create, read, and update their own reputation document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
