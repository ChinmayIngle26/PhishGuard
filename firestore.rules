rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow a logged-in user to read, create, or update their own reputation document.
    // This is secure because the {userId} wildcard ensures they can't access
    // anyone else's data. The server action will handle the business logic for points.
    match /reputations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
