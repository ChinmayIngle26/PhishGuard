
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read-only access to the threats feed
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Only server-side code should write threats
    }

    // Secure user reputation data
    match /reputations/{userId} {
      // A user can read their own reputation data
      allow read: if request.auth != null && request.auth.uid == userId;
      // A user can create their reputation doc, or update their own
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access to prevent unintended data exposure
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
