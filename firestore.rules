
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to the threats feed
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Only server-side can write
    }

    // Secure user reputations
    match /reputations/{userId} {
      // A user can read and write to their own reputation document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
