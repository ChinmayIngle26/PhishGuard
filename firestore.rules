
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to the threats feed
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Only the backend should write here
    }

    // Secure user reputations - only the user can read/write their own data
    match /reputations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
