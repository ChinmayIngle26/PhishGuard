
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read-only access to the threats collection
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Prevent client-side writes
    }

    // Allow users to read and write only their own reputation document
    match /reputations/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
  }
}
