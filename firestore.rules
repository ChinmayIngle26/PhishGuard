
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public, read-only access for the real-time threat feed
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Deny all client-side writes
    }

    // Users can only read and write their own reputation document
    match /reputations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Explicitly deny access to any other collections by default
  }
}
