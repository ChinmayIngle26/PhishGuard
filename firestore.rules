
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access to the threats collection for the feed
    match /threats/{threatId} {
      allow read: if true;
      allow write: if false; // Prevent client-side writes
    }

    // Allow users to read and write ONLY their own reputation document
    match /reputations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
